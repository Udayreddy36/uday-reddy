import math
def ball_collide(x1,y1,r1,x2,y2,r2):
#Calculate the distance between tje centers of the  two balls
dist=math.sqrt((x2-x1)**2+(y2-y1)**2)
print("Distance between two bals:",dist)
#calculate the sum of the radii of the two balls
r=r1+r2
print("sum of radii:",r)
# Check if the distance between the center is less than or eqaul to the sum of the radii 
if dist<=r:
 print("they are colliding")
return true 
else:
print("not colliding")
return false
c1=ball_collide(4,4,3,2,2,3)
print(c1)
c2=ball_collide(100,200,20,200,1000,10)
print(c2)
